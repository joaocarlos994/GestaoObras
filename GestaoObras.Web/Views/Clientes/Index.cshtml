@model IEnumerable<GestaoObras.Web.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">Clientes</h2>
        <small class="text-muted">Gestão de clientes registados na aplicação.</small>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i> Novo Cliente
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <p class="text-muted mb-3">
            Lista de clientes registados na aplicação.
        </p>

        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nome</th>
                    <th>NIF</th>
                    <th>Email</th>
                    <th>Telefone</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
       <tbody>
    @if (Model == null || !Model.Any())
    {
        <tr>
            <td colspan="5" class="text-center text-muted">
                Ainda não existem clientes registados.
            </td>
        </tr>
    }
    else
    {
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.NIF</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefone</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-sm btn-outline-secondary">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-sm btn-outline-danger">Apagar</a>
                </td>
            </tr>
        }
    }
</tbody>
        </table>
    </div>
</div>
