@model IEnumerable<GestaoObras.Web.Models.MovimentoStock>

@{
    ViewData["Title"] = "Movimentos de Stock";
}

<h2 class="mb-3">Movimentos de Stock</h2>

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <p class="text-muted mb-0">Ainda não existem movimentos de stock registados.</p>
        }
        else
        {
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Obra</th>
                        <th>Cliente</th>
                        <th>Material</th>
                        <th>Operação</th>
                        <th>Quantidade</th>
                        <th>Data</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Obra?.Nome</td>
                        <td>@m.Obra?.Cliente?.Nome</td>
                        <td>@m.Material?.Nome</td>
                        <td>@m.Operacao</td>
                        <td>@m.Quantidade</td>
                        <td>@m.DataOperacao.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
</div>
