@{
    ViewData["Title"] = "Dashboard";
}

<div class="row g-3">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5 class="card-title">Clientes</h5>
                <p class="card-text">Gerir clientes registados.</p>
                <a asp-controller="Clientes" asp-action="Index" class="text-white text-decoration-underline">
                    Ver clientes →
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">Materiais</h5>
                <p class="card-text">Stock e catálogo de materiais.</p>
                <a asp-controller="Materiais" asp-action="Index" class="text-white text-decoration-underline">
                    Ver materiais →
                </a>
            </div>
        </div>
    </div>

    <!-- repete para Obras e Movimentos -->
</div>
