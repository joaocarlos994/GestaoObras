@model GestaoObras.Web.Models.Material

@{
    ViewData["Title"] = "Apagar Material";
}

<h2 class="mb-3 text-danger">Apagar Material</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <p>Tem a certeza que pretende apagar este material?</p>

        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Descrição</dt>
            <dd class="col-sm-9">@Model.Descricao</dd>

            <dt class="col-sm-3">Stock Disponível</dt>
            <dd class="col-sm-9">@Model.StockDisponivel</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            <button type="submit" class="btn btn-danger ms-2">Apagar</button>
        </form>
    </div>
</div>
