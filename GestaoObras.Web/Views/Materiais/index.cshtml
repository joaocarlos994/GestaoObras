@model IEnumerable<GestaoObras.Web.Models.Material>

@{
    ViewData["Title"] = "Materiais";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">Materiais</h2>
        <small class="text-muted">Gestão dos materiais e stock disponível.</small>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        + Novo Material
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <p class="text-muted mb-0">Ainda não existem materiais registados.</p>
        }
        else
        {
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Stock Disponível</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Nome</td>
                        <td>@m.Descricao</td>
                        <td>@m.StockDisponivel</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@m.Id" class="btn btn-sm btn-outline-secondary">Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@m.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                            <a asp-action="Delete" asp-route-id="@m.Id" class="btn btn-sm btn-outline-danger">Apagar</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
</div>
