@{
    var title = ViewData["Title"] as string ?? "Gestão de Obras";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Gestão de Obras</title>

    <!-- AdminLTE CSS (usa a tua pasta) -->
    <link rel="stylesheet" href="~/css/adminlte/dist/css/adminlte.css" />

    <!-- Font Awesome (ícones) -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
          crossorigin="anonymous" />

    <!-- O teu CSS extra (opcional) -->
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body class="layout-fixed sidebar-expand-lg bg-body-tertiary">

<div class="app-wrapper">

    <!-- NAVBAR (topo) -->
    <nav class="app-header navbar navbar-expand bg-body">
        <div class="container-fluid">

            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-hard-hat me-2"></i> Gestão de Obras
            </a>

            <ul class="navbar-nav ms-auto">
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Dashboard</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Obras" asp-action="Index" class="nav-link">Obras</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Clientes" asp-action="Index" class="nav-link">Clientes</a>
                </li>
            </ul>

        </div>
    </nav>

    <!-- SIDEBAR (menu lateral) -->
    <aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
        <div class="sidebar-brand">
            <a asp-controller="Home" asp-action="Index" class="brand-link text-decoration-none">
                <span class="brand-text fw-bold">Gestão de Obras</span>
            </a>
        </div>

        <div class="sidebar">
            <nav class="mt-3">
                <ul class="nav nav-pills nav-sidebar flex-column" data-lte-toggle="treeview">

                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-gauge"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Clientes" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-users"></i>
                            <p>Clientes</p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Materiais" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-box"></i>
                            <p>Materiais</p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Obras" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-building"></i>
                            <p>Obras</p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Movimentos" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-arrows-rotate"></i>
                            <p>Movimentos de Stock</p>
                        </a>
                    </li>

                </ul>
            </nav>
        </div>
    </aside>

    <!-- CONTEÚDO PRINCIPAL -->
    <main class="app-main">
        <div class="app-content-header">
            <div class="container-fluid">
                <h1 class="app-content-title">@title</h1>
            </div>
        </div>

        <div class="app-content">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="app-footer text-center text-muted">
        <span>© @DateTime.Now.Year - Gestão de Obras</span>
    </footer>

</div>

<!-- Scripts AdminLTE 4 -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/css/adminlte/dist/js/adminlte.js"></script>

@RenderSection("Scripts", required: false)
</body>
</html>
