@model GestaoObras.Web.Models.Obra

@{
    ViewData["Title"] = "Apagar Obra";
}

<h2 class="mb-3">Apagar Obra</h2>

<div class="alert alert-warning">
    <strong>Tens a certeza que queres apagar esta obra?</strong><br />
    Esta ação não pode ser desfeita.
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Cliente</dt>
            <dd class="col-sm-9">@Model.Cliente?.Nome</dd>

            <dt class="col-sm-3">Morada</dt>
            <dd class="col-sm-9">@Model.Morada</dd>

            <dt class="col-sm-3">Ativa</dt>
            <dd class="col-sm-9">@(Model.Ativa ? "Sim" : "Não")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">
            Cancelar
        </a>
        <button type="submit" class="btn btn-danger">
            Apagar
        </button>
    </div>
</form>
