@model GestaoObras.Web.Models.Obra

@{
    ViewData["Title"] = "Apagar Obra";
}

<h2 class="mb-3 text-danger">Apagar Obra</h2>

<div class="alert alert-warning">
    Tem a certeza que pretende apagar esta obra? Esta ação não pode ser desfeita.
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Cliente</dt>
            <dd class="col-sm-9">@Model.Cliente?.Nome</dd>

            <dt class="col-sm-3">Morada</dt>
            <dd class="col-sm-9">@Model.Morada</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @if (Model.Ativa)
                {
                    <span class="badge bg-success">Ativa</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inativa</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash me-1"></i> Confirmar eliminação
        </button>
    </div>
</form>
