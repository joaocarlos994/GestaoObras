@model GestaoObras.Web.Models.Obra
@using Microsoft.AspNetCore.Mvc.Rendering

<div class="row g-3">
    <div class="col-md-6">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="ClienteId" class="form-label">Cliente</label>
        @Html.DropDownListFor(m => m.ClienteId,
            (SelectList)ViewBag.ClienteId,
            "Selecione um cliente...",
            new { @class = "form-select" })
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Descricao" class="form-label"></label>
        <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Morada" class="form-label"></label>
        <input asp-for="Morada" class="form-control" />
        <span asp-validation-for="Morada" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Latitude" class="form-label"></label>
        <input asp-for="Latitude" class="form-control" type="number" step="0.000001" />
        <span asp-validation-for="Latitude" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Longitude" class="form-label"></label>
        <input asp-for="Longitude" class="form-control" type="number" step="0.000001" />
        <span asp-validation-for="Longitude" class="text-danger"></span>
    </div>

    <div class="col-12">
        <div class="form-check">
            <input asp-for="Ativa" class="form-check-input" />
            <label asp-for="Ativa" class="form-check-label">Obra ativa</label>
        </div>
        <span asp-validation-for="Ativa" class="text-danger"></span>
    </div>
</div>
