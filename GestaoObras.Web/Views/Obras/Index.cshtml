@model IEnumerable<GestaoObras.Web.Models.Obra>

@{
    ViewData["Title"] = "Obras";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">Obras</h2>
        <small class="text-muted">Lista das obras registadas.</small>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i> Nova Obra
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        @if (!Model.Any())
        {
            <p class="text-muted mb-0">Ainda não existem obras registadas.</p>
        }
        else
        {
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Cliente</th>
                        <th>Morada</th>
                        <th>Ativa</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.Cliente?.Nome</td>
                        <td>@item.Morada</td>
                        <td>
                            @if (item.Ativa)
                            {
                                <span class="badge bg-success">Sim</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Não</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                Detalhes
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                Apagar
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
</div>
