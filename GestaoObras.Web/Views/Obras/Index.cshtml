@model IEnumerable<GestaoObras.Web.Models.Obra>

@{
    ViewData["Title"] = "Obras";
}

<h2 class="mb-3">Obras</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Nova Obra</a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Nome)</th>
            <th>Cliente</th>
            <th>@Html.DisplayNameFor(m => m.First().Morada)</th>
            <th>@Html.DisplayNameFor(m => m.First().Latitude)</th>
            <th>@Html.DisplayNameFor(m => m.First().Longitude)</th>
            <th>@Html.DisplayNameFor(m => m.First().Ativa)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var obra in Model)
    {
        <tr>
            <td>@obra.Nome</td>
            <td>@obra.Cliente?.Nome</td>
            <td>@obra.Morada</td>
            <td>@obra.Latitude</td>
            <td>@obra.Longitude</td>
            <td>@(obra.Ativa ? "Sim" : "Não")</td>
            <td>
                <a asp-action="Details" asp-route-id="@obra.Id" class="btn btn-sm btn-outline-secondary">Detalhes</a>
                <a asp-action="Edit" asp-route-id="@obra.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                <a asp-action="Delete" asp-route-id="@obra.Id" class="btn btn-sm btn-outline-danger">Apagar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
